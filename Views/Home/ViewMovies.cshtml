@{
    ViewData["Title"] = "Movie Database";
}

@model IEnumerable<BC_IS413_Assignment3.Models.Movies>

<div>
    <h2>@ViewData["Title"]</h2>

    <table class="pure-table pure-table-horizontal">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (BC_IS413_Assignment3.Models.Movies movie in Model)
            {
                <tr>
                    <td>@movie.Category</td>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Edited</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>
